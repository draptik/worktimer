<Window x:Class="WorkTimer.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WorkTimer="clr-namespace:WorkTimer.Gui" xmlns:Gui="clr-namespace:WorkTimer.Gui" xmlns:Controls="clr-namespace:WorkTimer.Gui.Controls" 
        Title="Should I Stay Or Should I Go Now..." 
        Height="700" 
        Width="625" 
        Loaded="Window_Loaded" 
        FocusManager.FocusedElement="{Binding ElementName=tbTimeStart}"
        Closing="OnClose" StateChanged="OnStateChanged" IsVisibleChanged="OnIsVisibleChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="160" ></RowDefinition>
            <RowDefinition Height="400" ></RowDefinition>
            <RowDefinition Height="30" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Controls:TimeAsText x:Name="ucTimeAsText" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" />
        <Controls:WorkProgress x:Name="ucProgress" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" />
        <Controls:AnalogClock x:Name="ucClock" Grid.Row="1" Grid.ColumnSpan="2" />

        <CheckBox Name="cbMinTime" Content="Show Min time" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="100,30,400,30" IsEnabled="False" IsChecked="True" Checked="cbMinTime_CheckChanged" Unchecked="cbMinTime_CheckChanged" />
        <CheckBox Name="cbMaxTime" Content="Show Max time" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="100,10,400,10" IsEnabled="False" IsChecked="True" Checked="cbMaxTime_CheckChanged" Unchecked="cbMaxTime_CheckChanged" />
        <CheckBox Name="cbTimeSpent" Content="Show current time" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="250,30,200,30" IsEnabled="False" IsChecked="True" Checked="cbTimeSpent_CheckChanged" Unchecked="cbTimeSpent_CheckChanged"/>
        <CheckBox Name="cbTargetTime" Content="Show target time" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="250,10,200,10" IsEnabled="False" IsChecked="True" Checked="cbTargetTime_CheckChanged" Unchecked="cbTargetTime_CheckChanged"/>
        
        <Button Grid.Row="2" Content="Start" Height="23" HorizontalAlignment="Left" Margin="12,0,0,0" Name="btnStart" VerticalAlignment="Top" Width="75" Click="btnStart_Click" IsTabStop="True" KeyboardNavigation.TabIndex="1"  />
        <Button Grid.Row="2" Content="Stop" Height="23" HorizontalAlignment="Left" Margin="100,0,0,0" Name="btnStop" VerticalAlignment="Top" Width="75" Click="btnStop_Click" IsEnabled="False" KeyboardNavigation.TabIndex="2"  />
        <Button Grid.Row="2" Content="Exit" Height="23" HorizontalAlignment="Left" Margin="500,0,0,0" Name="btnExit" VerticalAlignment="Top" Width="75" Click="btnExit_Click" KeyboardNavigation.TabIndex="3"  />
    </Grid>
</Window>
